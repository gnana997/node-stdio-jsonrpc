{
  "name": "node-stdio-jsonrpc",
  "version": "0.1.0",
  "description": "TypeScript JSON-RPC 2.0 client over stdio (child process) - clean and developer-friendly",
  "keywords": ["jsonrpc", "json-rpc", "stdio", "child-process", "typescript", "lsp", "mcp", "rpc"],
  "author": "gnana997",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gnana997/node-stdio-jsonrpc.git"
  },
  "bugs": {
    "url": "https://github.com/gnana997/node-stdio-jsonrpc/issues"
  },
  "homepage": "https://github.com/gnana997/node-stdio-jsonrpc#readme",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js",
      "require": "./dist/client.cjs"
    },
    "./transport": {
      "types": "./dist/transport.d.ts",
      "import": "./dist/transport.js",
      "require": "./dist/transport.cjs"
    }
  },
  "files": ["dist", "README.md", "LICENSE", "CHANGELOG.md"],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test"
  },
  "dependencies": {
    "@gnana997/node-jsonrpc": "^1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^4.0.6",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^4.0.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
